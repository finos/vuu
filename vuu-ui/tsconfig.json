{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "esnext",
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@vuu-ui/vuu-ui-controls": ["./packages/vuu-ui-controls/src"],
      "@vuu-ui/vuu-utils": ["./packages/vuu-utils/src"],
      "@vuu-ui/vuu-popups": ["./packages/vuu-popups/src"],
      "@vuu-ui/vuu-context-menu": ["./packages/vuu-context-menu/src"]
    }
  },
  "include": [
    "cypress",
    "experiments",
    "packages",
    "sample-apps/*/src",
    "showcase/src",
    "sample-apps/*/index.ts",
    "sample-apps/*/src",
    "global.d.ts",
    "packages/vuu-data-test/src/UpdateGenerator.ts",
    "sample-apps/standalone-table/index.tsx",
    "packages/vuu-icons/src/index.ts"
  ],
  "exclude": ["**/*.test.*"]
}
